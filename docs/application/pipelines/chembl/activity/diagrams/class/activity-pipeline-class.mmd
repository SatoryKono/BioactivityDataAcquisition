classDiagram
    class ChemblEntityPipeline {
        <<abstract>>
        +ID_COLUMN: str
        +API_FILTER_KEY: str
        +run(output_path, dry_run) RunResult
    }

    class ActivityPipeline {
        +ID_COLUMN: str
        +API_FILTER_KEY: str
    }

    class ValidationService {
        +validate(df, entity_name) DataFrame
    }

    class HashService {
        +add_hash_columns(df, keys) DataFrame
    }

    class UnifiedOutputWriter {
        +write_result(df, path, context) WriteResult
    }

    ChemblEntityPipeline <|-- ActivityPipeline
    ActivityPipeline o-- ValidationService
    ActivityPipeline o-- HashService
    ActivityPipeline o-- UnifiedOutputWriter

